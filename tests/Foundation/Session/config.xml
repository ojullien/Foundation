<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    colors="false"
    processIsolation="false"
    stopOnError="false"
    stopOnFailure="true"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    syntaxCheck="true"
    backupGlobals="false"
    backupStaticAttributes="false"
    cacheTokens="true"
    forceCoversAnnotation="true"
    mapTestClassNameToCoveredClassName="false"
    strict="true"
    verbose="true"
    bootstrap="../../setup_ob.php">
    <php>
    </php>
    <testsuites>
        <testsuite name="Session Test Suite">
            <directory suffix="Test.php" phpVersion="5.5.37">.</directory>
            <directory suffix="Test-54.php" phpVersion="5.4.45"  phpVersionOperator="=">.</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html"
            target="../../_report/_session"
            charset="UTF-8"
            yui="true"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"/>
