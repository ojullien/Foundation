<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    colors="false"
    processIsolation="false"
    stopOnError="false"
    stopOnFailure="true"
    stopOnIncomplete="false"
    stopOnSkipped="false"
    syntaxCheck="true"
    backupGlobals="false"
    backupStaticAttributes="false"
    cacheTokens="true"
    forceCoversAnnotation="true"
    mapTestClassNameToCoveredClassName="false"
    strict="true"
    verbose="true"
    bootstrap="../../setup.php">
    <php>
    </php>
    <testsuites>
        <testsuite name="File Test Suite">
            <directory suffix="Test.php">.</directory>
        </testsuite>
    </testsuites>
    <logging>
        <log type="coverage-html"
            target="../../_report/_file"
            charset="UTF-8"
            yui="true"
            highlight="true"
            lowUpperBound="35"
            highLowerBound="70"/>
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">../../../src/Foundation/File</directory>
            <exclude>
                <directory suffix=".php">../../Providers</directory>
                <directory suffix=".php">../../../tests</directory>
                <directory suffix=".php">../../../src/Foundation/Type</directory>
            </exclude>            
        </whitelist>
    </filter>
</phpunit>
